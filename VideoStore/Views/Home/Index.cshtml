@model IEnumerable<VideoStore.Models.VideoModels>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@Styles.Render("~/Content/Site.css")

<div class="jumbotron jumbotron-billboard">
    <div class="img"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>
                    Film på nätet!
                </p>
                @using (Html.BeginForm("ViewMovie", "Home"))
    {
                <button type="submit" value="Se alla filmer" name="reportName" class="btn btn-primary btn-lg">Se alla filmer</button>

}
            </div>
        </div>
    </div>
</div>

<div class="row">


    <h2>Latest movies!</h2>
    @foreach (var item in Model.Take(3))

    {
        String imageConvert = Convert.ToBase64String(item.Image);
        String image = string.Format("data:image/" + "jpeg" + "; base64,{0}", imageConvert);
        <div class="col-md-4">
            
            <p>
                <h4> @item.title </h4>
                <h6> @item.description </h6>

                <img class="img-responsive" width="100" src="@image" alt="Generic placeholder image">

                @using (Html.BeginForm("RentMovie", "Home"))
                {
                <button type="submit" value="@item.id" name="reportName" class="btn btn-primary btn-lg">Hyr</button>

                }


            </p>
        </div>
    }

</div>