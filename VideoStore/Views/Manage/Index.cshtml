@model VideoStore.Models.IndexViewModel

<h2>Hej @Html.DisplayFor(m => User.Identity.Name)!</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <div class="well well-lg">
                <div class="row">
                    @if (Model.HasPassword)
            {
                        <div class="col-sm-4"><h4>@Html.ActionLink("Ändra ditt lösenord", "ChangePassword")</h4></div>
                    }
                    else
                    {
                        <div class="col-sm-4"><h4>@Html.ActionLink("Sätt lösenord", "SetPassword")</h4></div>
                    }

                    

                </div>
            </div>

        </dd>


      
  
    </dl>
</div>
